&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT 
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 500
      REL_CUTOFF  60
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      MAP_CONSISTENT
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 3
    &END QS
    &SCF
      EPS_SCF 1.0E-7
      SCF_GUESS ATOMIC
      MAX_SCF 10
      &OT
         MINIMIZER DIIS
         PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
         EPS_SCF 1.0E-7
         MAX_SCF 10
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.0 12.0 12.0
    &END CELL
    &COORD
  N         0.000000        0.000000        0.322100
  O         0.000000        1.099200       -0.140900
  O         0.000000       -1.099200       -0.140900
    &END COORD
    &KIND N
      BASIS_SET TZV2PX-MOLOPT-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND O
      BASIS_SET TZV2PX-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT refNO2
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
